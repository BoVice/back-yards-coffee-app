<div class="container fit">
  <%=form_tag "/menus", methond: :post do %>
  <div class="row">
    Name:
    <input type="text" name="name">
  </div>

  <div class="row">
    Description:
    <input type="text" name="description">
  </div>
  <div class="row">
    Price:
    <input type="text" name="price">
  </div>

  <div class="row">
    <div class="section" style="height:100px;">
      <div class="input-field">
        <%= select_tag :category_id, options_for_select(@categories.collect{|category| [category.name, category.id]}), prompt: " - Select Category - " %>
        <label>Plan</label>
      </div>
    </div>
  </div>
<div class="row">
<div>
  <input class="btn col l2 m2 s12 btn-padding" type="submit" name="submit">
</div>

<div><a href="/menu" class="btn col l2 m2 s12 btn-padding">Cancel</a>
</div>


</div>
<%end%>
</div>

<script>
$(document).ready(function () {
  $('select').material_select();
});
</script>
